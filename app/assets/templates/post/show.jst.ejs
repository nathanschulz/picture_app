<button type="button" class="close" id="close-modal">&times;</button>
<div id="image-container">

  <img style="<%= "-webkit-filter: " + post.get('style')%>" src="<%= post.attributes.filepicker_url %>" class="main-image">
  <% if (post.likes()) { %>
    <%= post.likes().length %> likes.
  <% } %>
  
  <%if (post.likes().where({username: userName}).length > 0) { %>
  <a id="unlike-post">unlike</a> 
  <% } else { %>
   <a id="like-post">like</a>
  <% } %>
  <table class="style-table">
    <tr>
      <td><button class="style-button" data-toggle="button" data-style="sepia">Sepia</button></td>
      <td><button class="style-button" data-toggle="button" data-style="blur">Blur</button></td>
      <td><button class="style-button" data-toggle="button" data-style="grayscale">Grayscale</button></td>
      <td><button class="style-button" data-toggle="button" data-style="saturate">Saturate</button></td>
    </tr>
    <tr>
      <td><button class="style-button" data-toggle="button" data-style="invert">Invert</button></td>
      <td><button class="style-button" data-toggle="button" data-style="opacity">Translucent</button></td>
      <td><button class="style-button" data-toggle="button" data-style="brightness">Bright!</button></td>
      <td><button class="style-button" data-toggle="button" data-style="contrast">Contrast</button></td>
    </tr>
  </table>
</div>

<div class="detailBox">
    <div class="titleBox">
      <label><%= post.get('title') %></label>
    </div>
    <div class="commentBox"> 
      <%= post.get('comment') %>
    </div>
    <div class="actionBox">
        <ul class="commentList">
      <% post.comments().forEach (function(comment){ %>
       
            <li>
                <div class="commenterImage">
                  <img src="<%= comment.attributes.avatar %>"/>
                </div>
                <div class="commentText">
                    <p class=""><%= comment.attributes.body %></p> <span class="date sub-text">by <%= comment.attributes.username %> on <%= comment.attributes.created_at.slice(0,10)%></span>

                </div>
            </li>
       <% }) %>
        </ul>
        <form class="form-inline" role="form" id="comment-form">
            <div class="form-group">
                <input class="form-control" type="text" id="title-input" placeholder="Your comments" />
            </div>
            <div class="form-group">
                <button id="make-comment" class="btn btn-default">Add</button>
            </div>
        </form>
    </div>
</div>




