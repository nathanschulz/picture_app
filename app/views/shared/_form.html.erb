
<% if purpose == "session" %>
  <% button_label = "Login to Instagrad!" %>
  <% form_action = session_url %>
<% else %>
  <% button_label = "Sign Up!" %>
  <% form_action = users_url %>
<% end %>






    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title"><%= button_label %></h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin" action="<%= form_action %>" method="post">
                  <input
                       name="authenticity_token"
                       type="hidden"
                       value="<%= form_authenticity_token %>">
                <input type="text" name="user[username]" class="form-control" placeholder="Username" required autofocus>
                <input type="password" name="user[password]" class="form-control" placeholder="Password" required>
                <button value="<%= button_label %>" class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign in</button>
                </label>

                </form>
            </div>
        </div>
    </div>
